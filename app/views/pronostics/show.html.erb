<% content_for :for_head do %>
    <meta content=<%= pronostic_url(@pronostic) %> property="og:url">
    <meta content=<%= @url_s3_pronostic %> property="og:image"> <!-- image en 200x200px -->
    <meta content="Voici mon pronostic pour le match <%= @match_phrase %>" property="og:title">
    <meta content="Je pense que le match se terminera avec ce score" property="og:description">

<% end %>

<%- model_class = Pronostic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="row-fluid">
  <div class="span9"><%= image_tag @url_s3_pronostic %></div>
</div>

<div class="form-actions">
  <a href="javascript:fbShare('<%= pronostic_url(@pronostic) %>',
   'Voici mon pronostic pour le match <%= @match_phrase %>',
   'Je pense que le match se terminera avec ce score',
   '<%= @url_s3_pronostic %>',
    520, 350)" class="btn btn-warning">PARTAGER VOTRE PRONOSTIC</a>

</div>


