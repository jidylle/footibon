<%- model_class = Pronostic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @pronostic.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:match_id) %>:</strong></dt>
  <dd><%= @pronostic.match_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score1) %>:</strong></dt>
  <dd><%= @pronostic.score1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score2) %>:</strong></dt>
  <dd><%= @pronostic.score2 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pronostics_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pronostic_path(@pronostic), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pronostic_path(@pronostic),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
